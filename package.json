{
  "name": "common-apis",
  "version": "1.0.0",
  "configFileVersion": "1.0.0",
  "description": "Host Your Music - Common objects to be shared among the microservices",
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "test:all": "jest",
    "test": "jest test/unit/**",
    "test:component": "jest test/component/**",
    "test:watch": "jest test/unit/** --watch",
    "test:coverage": "jest test/unit/** --coverage",
    "coverage": "npm run test:coverage",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "eslint:src": "npx eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "eslint:test": "npx eslint 'test/**/*.{js,ts,tsx}' --quiet --fix",
    "eslint": "npm run eslint:test; npm run eslint:src",
    "pre-push": "rm -rf reports/ build/; npm run eslint; tsc;",
    "clean": "rm -rf node_modules/ reports/ .webpack/ build/ ./coverage",
    "build": "npm run clean; npm ci; npm run eslint; npm run test:coverage"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push"
    }
  },
  "keywords": [
    "host-your-music",
    "api",
    "shared"
  ],
  "author": "Rodrigo de Souza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HostYourMusic/common-apis"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "awesome-typescript-loader": "^5.2.1",
    "dotenv-extended": "^2.8.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-notice": "0.9.10",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "yaml-jest": "^1.0.5",
    "yaml-loader": "^0.6.0"
  },
  "dependencies": {
    "http-status-codes": "^1.4.0"
  }
}
